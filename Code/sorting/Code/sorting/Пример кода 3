Code/sorting/bead_sort.py


def bead_sort(arr):
    """
    Сортировка бусинами (гравитационная)
    Работает только для неотрицательных целых чисел
    """
    if any(x < 0 for x in arr):
        raise ValueError("Сортировка бусинами работает только с неотрицательными числами")
    
    if len(arr) == 0:
        return arr
    
    # Находим максимальное значение
    max_val = max(arr)
    
    # Создаем "абак" - матрицу бусин
    beads = [[0] * len(arr) for _ in range(max_val)]
    
    # Расставляем бусины
    for i, num in enumerate(arr):
        for j in range(num):
            beads[j][i] = 1
    
    # "Падение" бусин под действием гравитации
    for i in range(max_val):
        sum_beads = sum(beads[i])
        beads[i] = [0] * (len(arr) - sum_beads) + [1] * sum_beads
    
    # Считываем результат
    result = []
    for j in range(len(arr)):
        result.append(sum(beads[i][j] for i in range(max_val)))
    
    return result

# Пример использования
if __name__ == "__main__":
    arr = [3, 1, 4, 1, 5, 9, 2, 6]
    print("Исходный массив:", arr)
    sorted_arr = bead_sort(arr)
    print("Отсортированный массив:", sorted_arr)
